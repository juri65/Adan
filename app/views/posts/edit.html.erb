<div class="container">
    <h4 class="text-center py-4"><i class="fas fa-images"></i> 投稿を編集する <i class="fas fa-pen-fancy"></i></h4>
</div>
<div class="container pt-3">
    <div class="row">
        <div class="col-7 offset-md-3">
            <%= form_with model: @post do |f| %>
            <div class="form-group row">
                <%= f.label :画像 ,class: "col-sm-3 col-form-label " %>
                <%= f.file_field :image, accept: "image/*" %>
            </div>
            <div class="form-group row">
                <%= f.label :本文 ,class: "col-sm-3 col-form-label " %>
                <%= f.text_area :text %>
            </div>
            <div class="text-center py-2">
                <%= f.submit '変更する',class: "btn btn-outline-info" %>
            </div>
            <% end %>
            <% if @post.user == current_user %>
                <%= link_to "削除", post_path(@post), method: :delete, class: "btn btn-sm btn-outline-danger" %>
            <% end %>
        </div>
    </div>
</div>