<h4>投稿詳細</h4>
<div class="container">
  <div class="row">
    <div class="col-5 py-4">
     <%= image_tag @post.image, size:'300x300' %>
    </div>
    <div class="col-5 py-4">
      <%= link_to user_path(@post.user) do %>
        <%= image_tag @post.user.get_profile_image(100,100) %>
        <%= @post.user.name %><br>
      <% end %>
      <%= @post.text %><br>
      <%= @post.created_at.strftime('%Y/%m/%d') %>
     <div id="favorite_btn_<%= @post.id %>">
          <%= render 'favorites/favorite', post: @post %>
    </div>
<div>
  <p>コメント件数：<%= @post.comments.count %></p>
  <% @post.comments.each do |post_comment| %>
    <%= image_tag post_comment.user.get_profile_image(50,50) %>
    <strong><%= post_comment.user.name %></strong>
    <%= post_comment.comment %>
    <%#= post_comment.created_at.strftime('%Y/%m/%d') %>
    <% if post_comment.user == current_user %>
      <%= link_to "削除", post_comment_path(post_comment.post, post_comment), method: :delete %>
    <% end %>
  <% end %>
</div>
    <div>
  <%= form_with model: [@post, @comment] do |f| %>
    <%= f.text_area :comment, placeholder: "コメントをここに" %>
    <%= f.submit "コメントする" %>
  <% end %>
    
    </div>
   </div>
   <div class="col-2 py-4">
    <% if @post.user == current_user %>
      <%= link_to '編集する', edit_post_path(@post), class: "btn btn-sm btn-outline-info" %>
      <%= link_to '削除', post_path(@post), method: :delete, class: "btn btn-sm btn-outline-danger" %>
    <% end %>
  </div>
  </div>
</div>

<div class="container">
<div id='map' style="width: 400px; height: 400px;"></div>
<script>

function initMap(){
  let map
  <% if @spot == nil || @spot.latitude == nil || @spot.longitude == nil %>
    $('#map').css('display', 'none');
    return;
    <% @spot = Spot.new %>
    <% @spot.latitude = 0 %>
    <% @spot.longitude = 0 %>
  <% end %>
  map = new google.maps.Map(document.getElementById('map'), {
    center: {lat: <%= @spot.latitude %>, lng: <%= @spot.longitude %>},
    zoom: 15,
       zoomControl: false,
       mapTypeControl: false,
       fullscreenControl: false,
       streetViewControl: false,
  });

  marker = new google.maps.Marker({
    position: {lat: <%= @spot.latitude %>, lng: <%= @spot.longitude %>},
    map: map
  });
   //geocoder = new google.maps.Geocoder()
}
</script>
<script src="https://maps.googleapis.com/maps/api/js?key=<%= ENV['GOOGLE_MAP_API'] %>&callback=initMap" async defer></script>
</div>