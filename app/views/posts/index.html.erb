<h4>投稿一覧</h4>
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <% @posts.each do |post| %>
                    <%= link_to post_path(post.id), 'data-no-turbolinks' => true do %>
                    <%= image_tag post.get_image(200,200) %>
                    <% end %>
            <% end %>
        </div>
        <%= paginate @posts %>
    </div>
</div>
