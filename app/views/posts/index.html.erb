<h4>投稿一覧</h4>

<table>
    <tbody>
        <% @posts.each do |post| %>
        <tr>
            <td>
                <%= link_to post_path(post.id) do %>
                    <%= image_tag post.get_image(100,100) %>
                <% end %>
            </td>
        </tr>
        <% end %>
    </tbody>
    
    
</table>
     
     
