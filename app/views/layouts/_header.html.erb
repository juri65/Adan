  <header class="shadow-sm">
    <nav class="navbar navbar-expand-lg navbar-light">
      <div class="container">
          <%#= image_tag 'no1.png', size: "50×50" %> <!--ロゴにするか文字にするか-->
        <a class="navbar-brand p-3" href="/" style="font-family: Comic Sans MS; font-size:45px;">Adan</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavDropdown">
          <ul class="navbar-nav ml-auto">
              
         <% if user_signed_in? %>
         <!--ログインしている時 -->
         <p class="text-black">
          ようこそ、<%= current_user.name %>さん！
         </p>
           <%= render 'searches/serach' %>
        <ul class="navbar-nav ml-auto">
         
         <li>
          <%= link_to users_path, class: "header-button btn text-black" do %>
          <i class="fas fa-home"></i>
          <% end %>
         </li>
         <li>
          <%= link_to posts_path, class: "header-button btn text-black" do %>
          <i class="far fa-images"></i>
          <% end %>
         </li>
         <li>
          <%= link_to user_path(current_user.id), class: "header-button btn text-black" do %>
          <i class="fas fa-user-circle"></i>
          <% end %>
         </li>
         <li>
          <%= link_to  notifications_path, class: "header-button btn text-black" do %>
           <div style="position: relative;">
             <i class="far fa-bell "></i>
             <% if unchecked_notifications.any? %>
             <div style="position:absolute; display:flex;top: -5px; left:10px;">
               <i class="fa fa-circle" style="color: gold; "></i>
             </div>
             <% end %>
            </div>
          <% end %>
         </li>
         <li>
          <%= link_to new_post_path, class: "header-button btn text-black" do %>
          <i class="fas fa-plus"></i>
          <% end %>
         </li>
         <li>
          <%= link_to destroy_user_session_path, method: :delete, class: "header-button btn text-black" do %>
          <i class="fas fa-sign-out-alt"></i>
          <% end %>
         </li>
        <!-- ログインしていない時 -->
         <% else %>
         <li>
          <%= link_to 'ゲストログイン（閲覧用）', users_guest_sign_in_path, class: "btn btn-secondary btn-sm btn-block mb-3 sign_in", method: :post %>
         </li>
         <li>
          <%= link_to "新規登録", new_user_registration_path, class: "header-button btn text-black" %>
         </li>
         <li>
          <%= link_to "ログイン", new_user_session_path, class: "header-button btn text-black" %>
         </li>
         <% end %>
           </ul>
          </ul>
        </div>
      </div>
    </nav>
  </header>