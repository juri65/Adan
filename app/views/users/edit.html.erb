<div class="container">
  <h4 class="text-center py-4">プロフィール編集</h4>
  <!--border border-info-->
</div>
<div class="container pt-3">
  <div class="row">
    <div class="col-7 offset-md-3">
      <%= form_with model: @user do |f| %>
      <form>
      <div class="form-group row">
        <%= f.label :アイコン画像 ,class: "col-sm-3 col-form-label " %>
        <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
      </div>
      <div class="form-group row">
        <%= f.label :Name ,class: "col-sm-3 col-form-label " %>
        <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%>
      </div>
      <div class="text-center">
      <%= f.submit "変更を保存" ,class: "btn btn-outline-info" %>
      </div>
      </form>
      <% end %>
   </div>
  </div>
</div>