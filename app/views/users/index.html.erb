<!--ユーザーHome-->
<div class="card-list-container py-4">
    <% @following_posts.each do |post| %>
    <div class="card w-50 mx-auto mt-4 py-3 shadow-lg">
        <div><%= link_to user_path(post.user) do  %>
             <%= image_tag post.user.get_profile_image(100,100), class: "rounded-circle" %>
             <% end %>
             <%= post.user.name %>
        </div>
        <%= link_to post_path(post.id) do %>
        <%= image_tag post.get_image(500,500) %>
        <% end %>
        <div class="col-10">
          <div id="favorite_btn_<%= post.id %>">
              <%= render 'favorites/favorite',post:post %>
          </div>
          <p class="card-text"><%= post.text %></p>
          <span><%= link_to "コメント#{post.comments.count} 件", post_path(post.id), class:"text-dark" %></span>
        </div>
    </div>
    <% end %>
    <%= paginate  @following_posts %>
</div>
