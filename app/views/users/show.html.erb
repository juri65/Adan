<!--ユーザー詳細-->

<div>
  <h3><%= @user.name %></h3>
  <%= image_tag @user.get_profile_image(100,100) %>
  <% if @user.name != "guestuser" %>
  <% if @user == current_user %>
    <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
  <% end %>
  <% end %>
</div>
<% if @user != current_user %>
<% if current_user.following?(@user) %>
  <%= link_to "フォロー外す", user_relationships_path(@user.id), method: :delete %>
<% else %>
  <%= link_to "フォローする", user_relationships_path(@user.id), method: :post %>
<% end %>
<% end %>

<%= @user.followings.count %>
<%= link_to "フォロー", user_followings_path(@user), class: "btn text-black" %>
<%= @user.followers.count %>
<%= link_to "フォロワー", user_followers_path(@user), class: "btn text-black" %>

<%#= render 'relationships/follow' %>
<!-- フォローカウント -->

<!-- ユーザーの投稿一覧 -->
<% @posts.each do |post| %>
<div>
  <%= link_to post_path(post.id) do %>
    <%= image_tag post.get_image(100,100) %>
  <% end %>
  
</div>
<% end %>
<%= paginate @posts %>