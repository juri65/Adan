<!--ユーザー詳細-->
<div class="container">
  <div class="row">
    <div class="col-5 py-4">
      <%= image_tag @user.get_profile_image(200,200) %>
    </div>
    <div class="col-5 py-4">
    <h3><%= @user.name %></h3>
        <%= @user.followings.count %><!-- フォローカウント -->
          <%= link_to "フォロー中", user_followings_path(@user), class: "btn text-black" %>
        <%= @user.followers.count %>
          <%= link_to "フォロワー", user_followers_path(@user), class: "btn text-black" %>
      <div class="row">
        <div class="col-12 py-3">
        <%= @user.introduction %>
        </div>
      </div>
    </div>
    
    <div class="col-2 py-4">
      <% if @user.name != "guestuser" %>
      <% if @user == current_user %>
        <%= link_to "プロフィール編集", edit_user_path(@user) %>
      <% end %>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-5 py-4">
      <% if @user != current_user %>
      <% if current_user.following?(@user) %>
        <%= link_to "フォロー外す", user_relationships_path(@user.id), method: :delete %>
      <% else %>
        <%= link_to "フォローする", user_relationships_path(@user.id), method: :post %>
      <% end %>
      <% end %>
    </div>
  </div>
</div>
<!-- ユーザーの投稿一覧 -->
<div class="container">
  <div class="row">
      <% @posts.each do |post| %>
        <div class="col-md-3 py-4">
          <%= link_to post_path(post.id), 'data-no-turbolinks' => true do %>
          <%= image_tag post.get_image(200,200) %>
          <% end %>
        </div>
      <% end %>
  </div>
</div>
<%= paginate @posts %>